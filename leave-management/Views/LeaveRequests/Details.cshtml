@model leave_management.Models.LeaveRequestViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h1>Details for @Model.LeaveType.Name request for @Model.RequestingEmployee.Lastname, @Model.RequestingEmployee.Firstname </h1>
    </div>
}

@if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h1>Details for @Model.LeaveType.Name request for @Model.RequestingEmployee.Lastname, @Model.RequestingEmployee.Firstname </h1>
    </div>
}

@if (Model.Approved == false)
{
    <div class="alert alert-danger" role="alert">
        <h1>Details for @Model.LeaveType.Name request for @Model.RequestingEmployee.Lastname, @Model.RequestingEmployee.Firstname </h1>
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Model.RequestingEmployee.Lastname, @Model.RequestingEmployee.Firstname
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a asp-action="ApproveRequest" asp-route-id="@Model.Id" class="btn btn-block btn-success"><i class="fa fa-thumbs-up" aria-hidden="true"></i> Approve</a>
        <a asp-action="RejectRequest" asp-route-id="@Model.Id" class="btn btn-block btn-danger"><i class="fa fa-thumbs-down" aria-hidden="true"></i> Reject</a>
    }
    <a asp-action="Index"><i class="fa fa-backward" aria-hidden="true"></i> Back to List</a>
</div>
